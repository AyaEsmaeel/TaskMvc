@model List<Tasks>
@{
    ViewBag.Title = "Your Tasks";
}
<h1>Welcome, @ViewBag.ClientName</h1>

<p>
    here is your to-do list:
</p>
<a href="/Tasks/CreateNew">CreateNew</a>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Deadline</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Deadline</td>
                <td>
                    <a href="/Tasks/Edit?id=@item.TasksId">Edit</a> || <a href="/Tasks/Delete?id=@item.TasksId" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
